# DocVault SDK Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================

# Database connection details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=doc_vault

# SSL configuration for PostgreSQL connection
# Options: disable, prefer, require
POSTGRES_SSL=disable

# =============================================================================
# MinIO/S3 Storage Configuration
# =============================================================================

# MinIO server endpoint (or AWS S3 endpoint)
MINIO_ENDPOINT=localhost:9000

# MinIO/S3 credentials
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Whether to use HTTPS (true for S3, false for local MinIO)
MINIO_SECURE=false

# MinIO ports (for docker-compose)
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# MinIO region (optional)
MINIO_REGION=us-east-1

# =============================================================================
# DocVault Configuration
# =============================================================================

# Prefix for S3/MinIO buckets (one bucket per organization)
BUCKET_PREFIX=doc-vault

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Development Configuration
# =============================================================================

# Set to true to enable debug mode (more verbose logging)
DEBUG=false